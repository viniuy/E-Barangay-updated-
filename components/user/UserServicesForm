// src/components/user/ServiceForm.tsx
import { useState } from "react";
import { allServices } from "../ServicesData";

// Declare the Service type
interface Service {
  id: number;
  title: string;
  requirements: string[];
}

interface ServiceFormProps {
  serviceId: number;
  onSubmit: (data: any) => void;
}

export function ServiceForm({ serviceId, onSubmit }: ServiceFormProps) {
  const service: Service | undefined = allServices.find((s) => s.id === serviceId);

  const [formData, setFormData] = useState<{ [key: string]: string }>({});

  const handleChange = (req: string, value: string) => {
    setFormData((prev) => ({ ...prev, [req]: value }));
  };

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    if (!service) {
      // Handle case where service is not found
      alert("Service not found");
      return;
    }
    onSubmit({ serviceTitle: service.title, ...formData });
  };

  if (!service) {
    return <div>Service not found.</div>;
  }

  return (
    <div className="max-w-xl mx-auto bg-white p-6 rounded-xl shadow">
      <h2 className="text-2xl font-bold text-gray-800 mb-4">
        {service.title} Application
      </h2>

      <form onSubmit={handleSubmit} className="space-y-4">
        {service.requirements.map((req, idx) => (
          <div key={idx}>
            <label className="block text-sm font-medium text-gray-700">
              {req}
            </label>
            <input
              type="text"
              placeholder={`Enter ${req}`}
              className="w-full mt-1 px-3 py-2 border rounded-lg focus:ring focus:ring-blue-300"
              onChange={(e) => handleChange(req, e.target.value)}
              required
            />
          </div>
        ))}

        <button
          type="submit"
          className="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition"
        >
          Submit Application
        </button>
      </form>
    </div>
  );
}