{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    // ðŸ”§ FIX: Use "node" so TS can resolve leaflet/react-leaflet types properly
    "moduleResolution": "node",

    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    // ðŸ”§ Add this line to include Vite and Leaflet type definitions
    "types": ["vite/client", "leaflet"]
  },

  // ðŸ”§ Include type declarations, components, etc.
  "include": ["**/*.ts", "**/*.tsx", "vite-env.d.ts"]
}
